@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}
@if (!string.IsNullOrEmpty(TempData["Massage"] as string))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index:11">
        <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">IKEA</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Massage"];
            </div>
        </div>
    </div>
}
<h1>Employees</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Add New Employee</a>
<br />
<br />
@if (Model.Any())
{
    <table class="table table-striped table-mt-3">
        <thead class="text-center">
            <tr>

                <th>@Html.DisplayNameFor(E => E.Name) </th>
                <th>@Html.DisplayNameFor(E => E.Email) </th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType) </th>
                <th>@Html.DisplayNameFor(E => E.Age) </th>
                <th>@Html.DisplayNameFor(E => E.Salary) </th>
                <th>@Html.DisplayNameFor(E => E.IsActive) </th>
                <th>@Html.DisplayNameFor(E => E.Gender) </th>
                <th> Details</th>
                <th> Update</th>
                <th> Delete</th>
            </tr>
        </thead>
        <tbody class=" text-center">

            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(E => employee.Salary)</td>
                    <td><i class="fa @(employee.IsActive?"fa-solid fa-circle-check text-success":"fa-times-circle text-danger")"></i></td>
                    <td>@employee.Gender</td>
                    <td>
                        <a asp-action="Details" asp-route-id=@Model class="btn btn-warning">
                            <i class="fas fa-eye"> </i>Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id=@Model class="btn btn-success">
                            <i class="fas fa-edit"> </i>Update
                        </a>
                    </td>
                    <td>
                        @*<a asp-action="Delete" asp-route-id=@employee.Id class="btn btn-danger">
                            <i class="fas fa-trash"> </i>Delete
                        </a>*@
                        <button type="button" class="btn btn-danger " data-bs-toggle="modal" data-bs-target="#@Model">
                            <i class="fas fa-trash"> </i>Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

else
{
    <div class="alert alert-primary mt-4">
        <p>There is No Employees :( </p>
    </div>
}



