@model EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<h1> Employee Details</h1>
<br />
<br />
<!-- Bootstrap Tabs -->
<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>

</ul>

<div class="tab-content" id="myTabContent">

    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled />
            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" disabled />
            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" type="date" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="form-label" asp-for="EmployeeType"></label>
                <input asp-for="EmployeeType" class="form-control" disabled />

            </div>
            <div class="form-group col-6 mb-4">
                <label class="col-form-label" asp-for="IsActive"></label>
                <input asp-for="IsActive" type="checkbox" class="form-check-input" readonly />

            </div>

        </div>

    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="row col-12">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="CreatedOn"></label>
                <input asp-for="CreatedOn" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedBy"></label>
                <input asp-for="LastModifiedBy" class="form-control" disabled />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="LastModifiedOn"></label>
                <input asp-for="LastModifiedOn" class="form-control" disabled />
            </div>
        </div>
    </div>
    
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
</div>


