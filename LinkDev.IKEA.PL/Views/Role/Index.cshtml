@model IEnumerable<RolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@if (!string.IsNullOrEmpty(TempData["Massage"] as string))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index:11">
        <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">IKEA</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Massage"];
            </div>
        </div>
    </div>
}
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Add New Role</a>
<br />
<br />
<div class="m-2">
    <form class="row offset-2" asp-action="Index" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchValue" placeholder="Search By Role Name" />
        </div>
        <div class="col-4">
            <input class="btn btn-outline-dark" type="submit" value="Search" />
        </div>
    </form>
</div>
<br />
<br />
@if (Model.Any())
{
    <table class="table table-striped table-mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id) </th>
                <th>@Html.DisplayNameFor(R => R.Name) </th>
                <th> Details</th>
                <th> Update</th>
                <th> Delete</th>
            </tr>
        </thead>
        <tbody class=" text-center">

            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id=@Role.Id class="btn btn-warning">
                            <i class="fas fa-eye"> </i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id=@Role.Id class="btn btn-success">
                            <i class="fas fa-edit"> </i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id=@Role.Id class="btn btn-danger">
                            <i class="fas fa-trash"> </i>
                        </a>

                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-primary mt-4">
        <p>There is No Roles :( </p>
    </div>
}



