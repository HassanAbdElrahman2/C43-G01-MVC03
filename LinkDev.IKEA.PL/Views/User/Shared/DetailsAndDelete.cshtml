@model UserDetailsViewModel

    <div class="row col-12">
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="FName"></label>
            <input asp-for="FName" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LName"></label>
            <input asp-for="LName" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" disabled />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control" disabled />
        </div>
    </div>

@if (ViewData["Title"] as string == "Details")
{
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
}
else{
    <form asp-action="ConfiramDelete" asp-route-id="@Model.Id" class="mt-4">
        <input type="submit" value="Delete" class="btn btn-danger" />|
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>
}
